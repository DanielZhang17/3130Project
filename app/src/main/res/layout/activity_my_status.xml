<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyStatus">

    <TextView
        android:id="@+id/summerfee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/SName"
        android:layout_marginBottom="86dp"
        android:text="Summer Tuition Fee:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/SName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:text="Student Name:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/SID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SName"
        android:layout_marginTop="189dp"
        android:text="Student Banner:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/totalcreait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/SName"
        android:layout_centerVertical="true"
        android:text="Total Credit:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fallfee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/SName"
        android:layout_marginBottom="195dp"
        android:text="Fall Tuition Fee:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/winterfee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/SName"
        android:layout_marginBottom="144dp"
        android:text="Winter Tuition Fee:"
        android:textSize="18sp" />
</RelativeLayout>