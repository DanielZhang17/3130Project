<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailed_courseview"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="14dp" />
    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="353dp"
        android:layout_height="224dp"
        android:layout_marginBottom="123dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Course Description" />

        <TextView
            android:id="@+id/descrip"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:padding="2dp"
            android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
            android:textSize="12sp"
            android:translationY="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="256dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="351dp"
        android:layout_height="92dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cred"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="112dp"
                android:layout_height="86dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="Course Time:\n\nCredit Hour:\n\nLocation:"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/loc"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView35"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView35"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/imageButton"
                style="@android:style/Widget.Material.ImageButton"
                android:layout_width="54dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                app:srcCompat="@drawable/map_50px" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="79dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="436dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/crn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView28"
                android:layout_marginStart="101dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:text="CRNï¼š" />

            <TextView
                android:id="@+id/titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:paddingLeft="5dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/crn"
                android:layout_alignTop="@+id/titile"
                android:text="TextView" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>